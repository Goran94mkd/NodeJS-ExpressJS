<div class="p-3 mb-2 bg-success text-white">
  <h2>Prescriptions</h2>
  <a href="/prescriptions/create" class="btn alert-info">Add</a>
  <table class="table table-primary table-hover" style="margin-top: 10px">
    <thead class="titles">
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Medication</th>
        <th scope="col">Frequency</th>
        <th scope="col">Doctor</th>
        <th scope="col">Patient</th>
        <th scope="col" style="text-align: center;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% prescriptions.forEach(prescription => { %>
      <tr>
        <th scope="row"><%= prescription.number %></th>
        <td><%= prescription.medication %></td>
        <td><%= prescription.frequency %></td>
        <td><%= prescription.doctor ? prescription.doctor.full_name : '' %></td>
        <td><%= prescription.patient ? prescription.patient.full_name : '' %></td>
        <td style="text-align: center;">
          <a href="/prescriptions/<%= prescription._id %>" class="btn btn-warning">Edit</a>
          <button type="button" onclick="deletePrescription(`<%= prescription._id %>`)" class="btn btn-danger">Delete</button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>